{
  "compilerOptions": {
    "module": "CommonJS",
    "strict": true,
    "baseUrl": "./",
    "outDir": "build",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "ES6",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": [
      "node",
      "mocha",
      "chai"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include" : [
    "./src/**/*.ts"
  ],
  "exclude" : [
    "./src/public/"
  ]
}
